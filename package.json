{
  "name": "brief-monorepo",
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "dev": "pnpm --filter @brief/web dev",
    "build": "pnpm --filter @brief/web build",
    "start": "pnpm --filter @brief/web start",
    "lint": "pnpm --filter @brief/web lint",
    "brief": "pnpm --filter @brief/web brief",
    "migrate": "pnpm --filter @brief/web migrate",
    "backfill-search": "pnpm --filter @brief/web backfill-search",
    "security": "pnpm --filter @brief/web security",
    "ext:dev": "pnpm --filter @brief/extension dev",
    "ext:build": "pnpm --filter @brief/extension build"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ],
    "overrides": {
      "@types/react": "19.2.8",
      "@types/react-dom": "19.2.3"
    }
  }
}
